{
  "globalSettings": {
    "base_url": "https://127.0.0.1:8000",
    "apiKeys": {
      "OPENAI": "${OPENAI_API_KEY}",
      "HUGGING_FACE": "${HUGGING_FACE_API_KEY}",
      "NOTION": "${NOTION_API_KEY}"
    },
    "filePaths": {
      "inputDir": "./data/input",
      "outputFile": "./data/output/global_enriched_data.json"
    },
    "processingDefaults": {
      "maxTextLength": 512,
      "minTextLength": 30,
      "samplesPerRequest": 5
    },
    "featureToggles": {
      "coreferenceResolutionEnabled": false,
      "eventDetectionEnabled": false
    },
    "serviceConfigurations": [
      {
        "name": "OpenAI",
        "model": "text-davinci-003",
        "maxTokens": 100,
        "apiKey": "OPENAI_API_KEY"
      },
      {
        "name": "HuggingFace",
        "models": [
          {"identifier": "bert-base-uncased"},
          {"identifier": "gpt-2"},
          {"identifier": "roberta-base"}
        ],
        "apiKey": "HUGGING_FACE_API_KEY"
      },
      {
        "name": "Notion",
        "databaseId": "placeholder_database_id",
        "apiKey": "NOTION_API_KEY"
      }
    ],
    "projectMetadata": {
      "tags": ["data_preparation", "LLM", "utility"],
      "website": "https://example.com/",
      "details": {
        "name": "Large Language Model Data Preparation Utility",
        "version": "2.0.0",
        "licenseType": "Apache-2.0",
        "sourceCode": "https://github.com/your-repository/large-language-model-data-prep.git"
      }
    }
  }
}
